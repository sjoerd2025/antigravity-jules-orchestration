{
  "permissions": {
    "allowedTools": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "Task",
      "WebFetch"
    ],
    "dangerousOperations": {
      "requireConfirmation": true,
      "operations": ["git push", "npm publish", "rm -rf"]
    }
  },
  "hooks": {
    "preCommit": {
      "enabled": false,
      "command": "npm run lint"
    },
    "postCommit": {
      "enabled": false,
      "command": "echo 'Commit complete'"
    }
  },
  "parallelAgents": {
    "maxConcurrent": 5,
    "timeout": 300000,
    "retryOnFailure": true,
    "retryCount": 2
  },
  "contextFiles": [
    "CLAUDE.md",
    "README.md",
    "ARCHITECTURE.md",
    "package.json"
  ],
  "excludePatterns": [
    "node_modules/**",
    "dashboard/node_modules/**",
    "orchestrator-api/node_modules/**",
    "*.lock",
    "dist/**",
    ".git/**"
  ]
}
